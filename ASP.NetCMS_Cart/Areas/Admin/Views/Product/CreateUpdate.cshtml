@model ShoppingCart.DataAccess.ViewModels.ProductVM

<form method="post" asp-action="CreateUpdate" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
    <input type="hidden" asp-for="Product.ImageUrl" />
    <img src="@Model.Product.ImageUrl" width="100" height="100" />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model.Product == null || Model.Product.Id == 0) ? "Stwórz" : "Edytuj") Produkt</h2>
            <hr />
        </div>
        <div asp-validation-summary=All></div>
        <div class="row mb-3">
            <label asp-for="Product.Name">Nazwa</label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Product.Description">Opis</label>
            <textarea asp-for="Product.Description" class="control-label"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Product.Price">Cena</label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="row mb-3">
            <label asp-for="Product.ImageUrl">Zdjęcie</label>
            <input type="file" id="imageFile" name="file" class="form-select" />
        </div>
        <div class="row mb-3">
            <label asp-for="Product.Category.Name">Kategoria</label>
            <select asp-for="Product.Category.Name" asp-items="@Model.Categories" class="form-control">
                <option selected disabled>--Wybierz kategorię--</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
        @if (Model.Product == null || Model.Product.Id == 0)
        {
            <button class="btn btn-primary" type="submit">Dodaj</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Edytuj</button>
        }
    </div>
    <a asp-action="Index" asp-controller="Product">Powrót</a>
</form>
@section scripts
    {
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
