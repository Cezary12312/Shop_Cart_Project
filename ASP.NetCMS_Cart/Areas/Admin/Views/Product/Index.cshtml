@model ShoppingCart.DataAccess.ViewModels.ProductVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">PRODUKTY</h2>
        </div>
        <div class="col-6 text-end">
            <a class=" btn btn-primary" asp-action="CreateUpdate" asp-controller="Product">Dodaj</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Cena</th>
            <th>Kategoria</th>
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td class="group">
                    <a asp-action="CreateUpdate" asp-controller="Product" asp-route-id="@item.Id">
                        <i class="bi bi-pencil-square"></i>
                        Edytuj
                    </a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">
                        <i class="bi bi-trash"></i>
                        Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>