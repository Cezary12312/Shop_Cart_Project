@model List<ShoppingCart.Models.OrderHeader>

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Lista zamówień</h2>
        </div>
        <div class="col-6">
            <a asp-controller="order" asp-action="Index" asp-route-status="pending">
                Oczekujące
            </a>
            |
            <a asp-controller="order" asp-action="Index" asp-route-status="approved">
                Zatwierdzone
            </a>
            ||
            <a asp-controller="order" asp-action="Index" asp-route-status="underprocessed">
                Przetwarzane
            </a>
            |
            <a asp-controller="order" asp-action="Index" asp-route-status="shipped">
                Wysłane
            </a>
            ||
            <a asp-controller="order" asp-action="Index" asp-route-status="all">
                Wszystkie
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Numer Telefonu</th>
                <th>Status zamówienia</th>
                <th>Suma</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.PaymentStatus</td>
                    <td>@item.OrderTotal</td>
                    <td>
                        <a asp-action="OrderDetails" asp-controller="Order" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                            Szczegóły
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

