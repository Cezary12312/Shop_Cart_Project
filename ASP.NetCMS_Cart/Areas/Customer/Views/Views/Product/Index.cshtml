@model ShoppingCart.DataAccess.ViewModels.ProductVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">PRODUKTY</h2>
        </div>
        <div class="col-6 text-end">
            <a class=" btn btn-primary" asp-action="CreateUpdate" asp-controller="Product">Edytuj</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Cena</th>
            <th>Kategoria</th>
            <th>Akcja</th>
        </tr>
    </thead>
</table>


