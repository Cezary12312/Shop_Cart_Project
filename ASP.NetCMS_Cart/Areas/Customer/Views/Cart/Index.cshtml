@model ShoppingCart.DataAccess.ViewModels.CartVM

<section class="h-100" style="background-color: #eee ;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">
                <div class="d-flex justify-content-between align-items-md-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Koszyk</h3>
                </div>
                @foreach(var item in Model.ListOfCart)
                {
                    <div class="card rounded-3 mb-4">
                        <div class="card-body p-4">
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-md-2 col-lg-2 col-xl-2">
                                    <img src="@item.Product.ImageUrl" class="img-fluid rounded-3" />
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-3">
                                    <p class="lead fw-normal mb-2">@item.Product.Name</p>
                                    <p><span class="text-muted">@Html.Raw(item.Product.Description)</p>
                                </div>
                                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                    <h5 class="mb-0">@item.Product.Price</h5>
                                    x
                                    <h5 class="mb-0">@item.Count</h5>
                                </div>
                                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                    <a asp-action="Plus" asp-route-id="@item.ProductId" class="btn btn-link px-2">
                                        <i class="bi bi-node-plus-fill">Dodaj</i>
                                    </a>
                                    <a asp-action="Minus" asp-route-id="@item.ProductId" class="btn btn-link px-2">
                                        <i class="bi bi-node-minus-fill">Odejmij</i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-link px-2">
                                        <i class="bi bi-node-trash-fill">Usuń</i>
                                    </a>
                                </div>
                                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                    <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="card mb-4">
                    <div class="card-body p-4 d-flex flex-row">
                        <div class="form-outline flex-fill">
                            <label class="form-label">Suma</label>
                        </div>
                        <label class="ms-3">@Model.ItemOrderHeader.OrderTotal.ToString("c")</label>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body p-4 d-flex flex-row">
                        <a asp-action="Summary" class="btn btn alert-warning btn-block btn-lg ms-3">Przejdź do płatności</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
